{
	"extends": ["@epic-web/config/typescript"],
	"include": ["**/*.ts", "**/*.tsx", "node_modules/vitest/globals.d.ts"],
	"compilerOptions": {
		"paths": {
			"@assets/*": ["./assets/*"],
			"@components/*": ["./components/*"],
			"@constants/*": ["./constants/*"],
			"@utils/*": ["./utils/*"],
			"@interfaces/*": ["./interfaces/*"],
			"@hooks/*": ["./hooks/*"],
			"@services/*": ["./services/*"]
		}
	}
}
